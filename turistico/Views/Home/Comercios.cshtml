@{
    ViewBag.Title = "Comercios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h2 class="fw-bold text-success mb-3">Comercios y Servicios Registrados</h2>
    <p class="text-muted mb-5 fs-5">
        Listado de comercios locales registrados y regulados por la municipalidad.
    </p>

    <div class="row g-4 row-cols-1 row-cols-md-2 row-cols-lg-3">

        <!-- COMERCIO 1 -->
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h4 class="fw-bold text-success">Hotel Mirador Verde</h4>
                    <p class="fs-6">
                        Hospedaje con vista panorámica y servicios turísticos.
                    </p>
                    <ul class="list-unstyled fs-6">
                        <li>🏨 Categoría: Hospedaje</li>
                        <li>📍 Centro del cantón</li>
                    </ul>
                    <div class="mt-auto d-flex gap-2">
                        <a href="#" class="btn btn-outline-success">Ver perfil</a>
                        <a href="#" class="btn btn-success">Contactar</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- COMERCIO 2 -->
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h4 class="fw-bold text-success">Restaurante Sabores Típicos</h4>
                    <p class="fs-6">
                        Comida tradicional costarricense y platillos locales.
                    </p>
                    <ul class="list-unstyled fs-6">
                        <li>🍽️ Categoría: Restaurante</li>
                        <li>📍 Barrio Central</li>
                    </ul>
                    <div class="mt-auto d-flex gap-2">
                        <a href="#" class="btn btn-outline-success">Ver perfil</a>
                        <a href="#" class="btn btn-success">Contactar</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- COMERCIO 3 -->
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h4 class="fw-bold text-success">Café Montaña Verde</h4>
                    <p class="fs-6">
                        Café artesanal con productos locales y ambiente turístico.
                    </p>
                    <ul class="list-unstyled fs-6">
                        <li>☕ Categoría: Cafetería</li>
                        <li>📍 Zona turística</li>
                    </ul>
                    <div class="mt-auto d-flex gap-2">
                        <a href="#" class="btn btn-outline-success">Ver perfil</a>
                        <a href="#" class="btn btn-success">Contactar</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- COMERCIO 4 -->
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h4 class="fw-bold text-success">Centro EcoTours</h4>
                    <p class="fs-6">
                        Servicios de tours ecológicos y actividades de aventura.
                    </p>
                    <ul class="list-unstyled fs-6">
                        <li>🌿 Categoría: Turismo</li>
                        <li>📍 Zona montañosa</li>
                    </ul>
                    <div class="mt-auto d-flex gap-2">
                        <a href="#" class="btn btn-outline-success">Ver perfil</a>
                        <a href="#" class="btn btn-success">Contactar</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
