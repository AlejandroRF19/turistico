@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- HERO -->
<div class="p-5 mb-5 rounded text-white" style="background: linear-gradient(135deg, #2e7d32, #66bb6a);">
    <div class="container">
        <h1 class="fw-bold">Sistema de Información Turística Municipal</h1>
        <p class="lead">
            Plataforma digital para promover, organizar y fortalecer el turismo local
        </p>
        <a href="#" class="btn btn-light btn-sm mt-3">Conocer más</a>
    </div>
</div>

<!-- MÓDULOS -->
<div class="container">
    <div class="row g-4">

        <div class="col-md-4">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-body text-center">
                    <div class="mb-3 fs-1 text-success">🗺️</div>
                    <h5 class="card-title">Mapa Turístico</h5>
                    <p class="card-text">
                        Explorá los principales atractivos turísticos del cantón.
                    </p>
                    <a href="#" class="btn btn-outline-success btn-sm">Explorar</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-body text-center">
                    <div class="mb-3 fs-1 text-success">🎉</div>
                    <h5 class="card-title">Eventos y Actividades</h5>
                    <p class="card-text">
                        Informate sobre eventos culturales y recreativos.
                    </p>
                    <a href="#" class="btn btn-outline-success btn-sm">Ver eventos</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-body text-center">
                    <div class="mb-3 fs-1 text-success">🏪</div>
                    <h5 class="card-title">Comercios y Servicios</h5>
                    <p class="card-text">
                        Descubrí comercios locales registrados y regulados.
                    </p>
                    <a href="#" class="btn btn-outline-success btn-sm">Ver comercios</a>
                </div>
            </div>
        </div>

    </div>

    <!-- MENSAJE FINAL -->
    <div class="mt-5 p-4 rounded text-center" style="background-color:#e8f5e9;">
        <p class="mb-0">
            El SITM impulsa un turismo sostenible, accesible y conectado con la comunidad.
        </p>
    </div>
</div>
