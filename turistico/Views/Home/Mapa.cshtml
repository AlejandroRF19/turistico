@{
    ViewBag.Title = "Mapa Turístico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <!-- TÍTULO -->
    <h2 class="fw-bold text-success mb-3">Mapa Turístico</h2>
    <p class="text-muted fs-5 mb-4">
        Explorá los principales atractivos turísticos del cantón mediante categorías y filtros.
    </p>

    <div class="row g-4">

        <!-- FILTROS -->
        <div class="col-lg-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="fw-bold text-success mb-3">Filtros</h5>

                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" checked>
                        <label class="form-check-label">Naturaleza</label>
                    </div>

                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" checked>
                        <label class="form-check-label">Gastronomía</label>
                    </div>

                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox">
                        <label class="form-check-label">Cultura</label>
                    </div>

                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox">
                        <label class="form-check-label">Hospedaje</label>
                    </div>

                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox">
                        <label class="form-check-label">Aventura</label>
                    </div>

                    <button class="btn btn-success w-100 mt-3" disabled>
                        Aplicar filtros
                    </button>
                </div>
            </div>
        </div>

        <!-- MAPA SIMULADO -->
        <div class="col-lg-9">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center"
                     style="height:300px; background-color:#e8f5e9; border:2px dashed #66bb6a;">
                    <h4 class="text-success fw-bold mt-5">Mapa Turístico Interactivo</h4>
                    <p class="text-muted">
                        Visualización simulada del mapa con puntos turísticos
                    </p>
                    <p class="fs-1">🗺️</p>
                </div>
            </div>

            <!-- LISTADO DE LUGARES -->
            <div class="row g-4 row-cols-1 row-cols-md-2 row-cols-lg-3">

                <!-- LUGAR 1 -->
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="fw-bold text-success">Cascada El Encanto</h5>
                            <p class="fs-6">Atractivo natural rodeado de bosque.</p>
                            <span class="badge bg-success">Naturaleza</span>
                            <div class="mt-3 d-flex gap-2">
                                <a href="#" class="btn btn-outline-success btn-sm">Ver detalle</a>
                                <a href="#" class="btn btn-success btn-sm">Ubicar</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- LUGAR 2 -->
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="fw-bold text-success">Restaurante Sabores Típicos</h5>
                            <p class="fs-6">Comida tradicional costarricense.</p>
                            <span class="badge bg-success">Gastronomía</span>
                            <div class="mt-3 d-flex gap-2">
                                <a href="#" class="btn btn-outline-success btn-sm">Ver detalle</a>
                                <a href="#" class="btn btn-success btn-sm">Ubicar</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- LUGAR 3 -->
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="fw-bold text-success">Museo Histórico Municipal</h5>
                            <p class="fs-6">Patrimonio cultural del cantón.</p>
                            <span class="badge bg-success">Cultura</span>
                            <div class="mt-3 d-flex gap-2">
                                <a href="#" class="btn btn-outline-success btn-sm">Ver detalle</a>
                                <a href="#" class="btn btn-success btn-sm">Ubicar</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- LUGAR 4 -->
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="fw-bold text-success">Hotel Mirador Verde</h5>
                            <p class="fs-6">Hospedaje con vista panorámica.</p>
                            <span class="badge bg-success">Hospedaje</span>
                            <div class="mt-3 d-flex gap-2">
                                <a href="#" class="btn btn-outline-success btn-sm">Ver detalle</a>
                                <a href="#" class="btn btn-success btn-sm">Ubicar</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- LUGAR 5 -->
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="fw-bold text-success">Sendero Los Robles</h5>
                            <p class="fs-6">Ruta de caminata ecológica.</p>
                            <span class="badge bg-success">Aventura</span>
                            <div class="mt-3 d-flex gap-2">
                                <a href="#" class="btn btn-outline-success btn-sm">Ver detalle</a>
                                <a href="#" class="btn btn-success btn-sm">Ubicar</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>


