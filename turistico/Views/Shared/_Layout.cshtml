<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - SITM</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            background-color: #f8f9fa;
        }

        main {
            flex: 1;
        }
    </style>
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg shadow-sm" style="background-color:#2e7d32;">
        <div class="container">
            <a class="navbar-brand text-white fw-bold" href="/Home/Index">SITM</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="menu">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Home/Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Home/Perfil">Perfil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Home/Mapa">Mapa Turístico</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Home/Eventos">Eventos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Home/Comercios">Comercios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Home/Resenas">Reseñas</a>
                    </li>

                </ul>


                <a class="nav-link text-white" href="/Home/Login">Cerrar sesión</a>
            </div>
        </div>
    </nav>

    <!-- CONTENIDO -->
    <main class="container my-5">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="py-3" style="background-color:#1b5e20;">
        <div class="container text-center text-white">
            <small>© 2025 Municipalidad | Sistema de Información Turística Municipal (SITM)</small>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>


